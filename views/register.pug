extends layout

block content
    form.form-signin(action="/users/register", method="post", enctype = 'multipart/form-data')
      .text-center.mb-4
        h1.h3.mb-3.font-weight-normal Register
        p
          | Register now to join in with the other members
        ul.errors
          if errors
            each error, i in errors
              div.alert.alert-danger #{error.msg}
      .form-label-group
        input#name.form-control(name = 'name' type="text" placeholder="Name" required="" autofocus="")
        label(for="name") Name
      .form-label-group
        input#email.form-control(name = 'email' type="email" placeholder="Email address" required="" autofocus="")
        label(for="email") Email address
      .form-label-group
        input#username.form-control(name = 'username' type="text" placeholder="Username" required="" autofocus="")
        label(for="username") Username
      .form-label-group
        input#password.form-control(name = 'password' type="password" placeholder="Password" required="")
        label(for="password") Password
      .form-label-group
        input#password2.form-control(name = 'password2' type="password" placeholder="Check Password" required="")
        label(for="password2") Check Password
      .form-label-group
        input#profileimage.align-content-center(name = 'profileimage' type="file" accept="image/*" placeholder="Profile Picture" required="")
      button.btn.btn-lg.btn-primary.btn-block(type="submit", name='submit') Sign in

